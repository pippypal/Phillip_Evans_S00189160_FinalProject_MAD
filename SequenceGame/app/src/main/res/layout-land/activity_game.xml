<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <Button
        android:id="@+id/BtnYellow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/style_circular_button_yellow"
        android:text="Yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnRed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="306dp"
        android:layout_marginEnd="306dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/style_circular_button_red"
        android:text="Red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BtnBlue"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="306dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="306dp"
        android:background="@drawable/style_circular_button_blue"
        android:text="Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnGreen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/style_circular_button_green"
        android:text="Green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="41dp"
        android:onClick="next"
        android:text="Next"
        app:layout_constraintBottom_toTopOf="@+id/BtnRed"
        app:layout_constraintEnd_toStartOf="@+id/BtnGreen"
        app:layout_constraintStart_toEndOf="@+id/BtnYellow"
        app:layout_constraintTop_toBottomOf="@+id/BtnBlue" />

</androidx.constraintlayout.widget.ConstraintLayout>